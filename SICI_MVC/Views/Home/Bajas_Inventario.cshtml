@model IEnumerable<SICI_MVC.Models.SICI_spBajas_Inventario_Obtener_Result>

@{
    ViewBag.Title = "Bajas Inventario";
}

<p></p>

@using (Html.BeginForm("Bajas_Inventario", "Home", FormMethod.Post))
{
<div class="panel panel-default">
    <div class="panel-heading text-center">
        <strong>VALOR TOTAL DE LAS BAJAS DE LOS INVENTARIOS DE LA ARMADA ARGENTINA</strong>
    </div>
    <div class="panel-body" style="text-align:center">
        <div class="form-inline">
            @Html.Label("AÑO de ALTA: ")
            @Html.TextBox("txtAÑO_ALTA", "", new { @class = "form-control", @type = "number", @style = "width:100px;" })
            <button type="submit" class="btn btn-info">Buscar</button>
        </div>
    </div>
</div>
}

@if (Model != null)
{
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th class="text-center">
                @Html.DisplayName("SIGLA")
                <br />
                @Html.DisplayName("DESTINO")
            </th>
            <th class="text-center">
                @Html.DisplayName("CODIGO")
                <br />
                @Html.DisplayName("DESTINO")
            </th>
            <th class="text-center">
                @Html.DisplayName("DESCRIPCION")
                <br />
                @Html.DisplayName("INVENTARIO")
            </th>
            <th class="text-center">
                @Html.DisplayName("TIPO")
                <br />
                @Html.DisplayName("BIEN")
            </th>
            <th class="text-center">
                @Html.DisplayName("TOTAL")
                <br />
                @Html.DisplayName("ORIGINAL")
            </th>
            <th class="text-center">
                @Html.DisplayName("TOTAL")
                <br />
                @Html.DisplayName("AMORTIZADO")
            </th>
            <th class="text-center">
                @Html.DisplayName("TOTAL")
                <br />
                @Html.DisplayName("RESIDUAL")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Sigla)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Inventario)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Tipo_Bien)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Valor_Origen)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Amortizacion_Acumulada)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Valor_Residual)
                </td>
            </tr>
        }

    </table>
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success text-center">
        <strong>@ViewBag.Mensaje</strong>
    </div>
}

@if (ViewBag.Resultado != null)
{
    <div class="alert alert-info text-center">
        <strong>@ViewBag.Resultado</strong>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning text-center">
        <strong>@ViewBag.Error</strong>
    </div>
}
