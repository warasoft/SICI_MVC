@model SICI_MVC.Models.SIGMA.Totales_Efecto_Pagina

@{
    ViewBag.Title = "Valorización por Efecto";
}

<p></p>

@using (Html.BeginForm("Totales_Efecto", "Home", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <strong>VALORIZACION TOTAL POR EFECTO DE EFECTOS ASIGNADOS</strong>
        </div>
        <div class="panel-body" style="text-align:center">
            <div class="form-inline">
                @Html.Label("NNE: ")
                @Html.TextBox("txtNNE", "", new { @class = "form-control", @maxLength = "13", @style = "width:200px;" })
                @Html.Label("     ")
                @Html.Label("Sigla: ")
                @Html.TextBox("txtSigla", "", new { @class = "form-control", @maxLength = "4", @style = "width:100px;" })
                @Html.Label("     ")
                @Html.Label("Cargo Destino: ")
                @Html.TextBox("txtCargoDestino", "", new { @class = "form-control", @maxLength = "6", @style = "width:100px;" })
                @Html.Label("     ")
                @Html.Label("Cargo Efecto: ")
                @Html.TextBox("txtCargoEfecto", "", new { @class = "form-control", @maxLength = "2", @style = "width:100px;" })
                <button type="submit" class="btn btn-info">Buscar</button>
            </div>
        </div>
    </div>
}

@if (Model.Totales_Efecto != null)
{
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th class="text-center">
                @Html.DisplayName("NNE")
            </th>
            <th class="text-center">
                @Html.DisplayName("NOMENCLATURA")
            </th>
            <th class="text-center">
                @Html.DisplayName("CARGO")
                <br />
                @Html.DisplayName("EFECTO")
            </th>
            <th class="text-center">
                @Html.DisplayName("SIGLA")
                <br />
                @Html.DisplayName("DESTINO")
            </th>
            <th class="text-center">
                @Html.DisplayName("CARGO")
                <br />
                @Html.DisplayName("DESTINO")
            </th>
            <th class="text-center">
                @Html.DisplayName("CANT")
                <br />
                @Html.DisplayName("TOTAL")
            </th>
            <th class="text-center">
                @Html.DisplayName("VALOR")
                <br />
                @Html.DisplayName("TOTAL")
            </th>
            <th class="text-center">
                @Html.DisplayName("AMORTIZAC")
                <br />
                @Html.DisplayName("ACUMULADA")
            </th>
            <th class="text-center">
                @Html.DisplayName("TOTAL")
                <br />
                @Html.DisplayName("VALORIZADO")
            </th>
        </tr>

        @for (int i = 0; i < Model.Totales_Efecto.Count; i++)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].NNE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Nomenclatura)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Cargo_Efecto)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Sigla_Destino)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Cod_CargoDestino)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Cantidad)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Total_Efecto)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Total_Amortizado)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => Model.Totales_Efecto[i].Total_Valorizado)
                </td>
            </tr>
        }

    </table>

    if (Model.Totales_Efecto.Count > 0)
    {
        Html.RenderPartial("_paginador", Model);
    }
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success text-center">
        <strong>@ViewBag.Mensaje</strong>
    </div>
}

@if (ViewBag.Resultado != null)
{
    <div class="alert alert-info text-center">
        <strong>@ViewBag.Resultado</strong>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning text-center">
        <strong>@ViewBag.Error</strong>
    </div>
}
